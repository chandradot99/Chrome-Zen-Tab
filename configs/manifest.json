{
  "manifest_version": 3,
  "name": "ZenTab - Beautiful New Tab",
  "version": "1.0.0",
  "description": "Transform your new tab with weather, tasks, notes, quick links, and beautiful backgrounds.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open React Extension New Tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}
