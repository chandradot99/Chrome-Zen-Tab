{
  "manifest_version": 3,
  "name": "React TypeScript Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension built with React, TypeScript, and Tailwind CSS (New Tab Mode)",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open React Extension New Tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
