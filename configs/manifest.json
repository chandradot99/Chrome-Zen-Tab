{
  "manifest_version": 3,
  "name": "ZenTab - Beautiful New Tab",
  "version": "1.0.0",
  "description": "Transform your new tab with weather, tasks, notes, quick links, and beautiful backgrounds.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.weatherapi.com/*",
    "https://picsum.photos/*"
  ],
  "action": {
    "default_title": "Open ZenTab New Tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png",
    "512": "icons/icon128.png"
  }
}
